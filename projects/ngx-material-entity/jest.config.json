{
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "bail": true,
    "silent": false,
    "setupFiles": ["./jest.setup.ts"],
    "roots": ["./src"],
    "collectCoverage": true,
    "coverageDirectory": "../../coverage",
    "coverageThreshold": {
        "global": {
            "lines": 100
        }
    },
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
}