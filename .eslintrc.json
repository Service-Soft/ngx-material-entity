{
    "root": true,
    "extends": "./.eslintrc.base.json",
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "excludedFiles": [
                "*.test.ts",
                "*.module.ts",
                "*.component.ts",
                "*.service.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@angular-eslint/component-selector": [
                    "warn",
                    {
                        "style": "kebab-case",
                        "type": "element",
                        "prefix": "ngx-mat-entity"
                    }
                ]
            }
        },
        {
            "files": [
                "*.module.ts",
                "*.component.ts",
                "*.service.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@angular-eslint/component-selector": [
                    "warn",
                    {
                        "style": "kebab-case",
                        "type": "element",
                        "prefix": "ngx-mat-entity"
                    }
                ],
                "jsdoc/require-jsdoc": [
                    "warn",
                    {
                        "contexts": [
                            "ClassProperty",
                            "PropertyDefinition[decorators.0.expression.callee.name='Input']",
                            "MethodDefinition[accessibility!='private'][key.name!='constructor'][key.name!='ngOnInit'][key.name!='ngOnDestroy']",
                            "FunctionDeclaration",
                            "TSInterfaceDeclaration",
                            "TSEnumDeclaration",
                            "TSTypeAliasDeclaration",
                            "TSDeclareFunction"
                        ]
                    }
                ]
            }
        },
        {
            "files": [
                "*.test.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "@angular-eslint/component-selector": [
                    "warn",
                    {
                        "style": "kebab-case",
                        "type": "element",
                        "prefix": "ngx-mat-entity"
                    }
                ],
                "jsdoc/require-jsdoc": "off"
            }
        },
        {
            "files": [
                "*.html"
            ],
            "rules": {
                // TODO enable and fix code
                "@angular-eslint/template/cyclomatic-complexity": "off"
            }
        }
    ]
}